generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id           String   @id @default(uuid())
  email        String   @unique
  password     String
  refreshToken String?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("admins")
}

model Project {
  id           String   @id @default(uuid())
  numericId    Int      @unique @default(autoincrement())
  title        String
  description  String
  technologies String[]
  slug         String
  liveUrl      String?  @map("live_url")
  githubUrl    String?  @map("github_url")
  features     String[]
  aboutProject String   @map("about_project")
  role         String
  date         DateTime
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  images ProjectImage[]

  @@map("projects")
}

model ProjectImage {
  id        String   @id @default(uuid())
  imageUrl  String   @map("image_url")
  isCover   Boolean  @default(false) @map("is_cover")
  alt       String
  createdAt DateTime @default(now()) @map("created_at")

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String

  @@index([projectId])
  @@map("project_images")
}

model ContactRequest {
  id        String   @id @default(uuid())
  name      String
  email     String
  message   String?
  createdAt DateTime @default(now()) @map("created_at")

  telegramSent  Boolean @default(false) @map("telegram_sent")
  telegramError String? @map("telegram_error")

  @@map("contact_requests")
}
